<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <import type="android.text.TextUtils"/>

        <variable name="repo" type="com.inderbagga.foundation.data.model.Repo" />
        <variable name="viewModel" type="com.inderbagga.foundation.ui.detail.DetailViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/normal_margin"
            android:gravity="center">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/detailLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="@{repo.owner == null ? View.GONE : View.VISIBLE}"
                android:layout_margin="@dimen/small_margin">

                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="@dimen/avatar_size_large"
                    android:layout_height="@dimen/avatar_size_large"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_horizontal"
                    app:avatar="@{repo.owner.avatarUrl}"
                    tools:ignore="ContentDescription"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_see_profile"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/normal_margin"
                    android:drawablePadding="@dimen/small_margin"
                    android:drawableStart="@drawable/ic_link_black"
                    android:padding="@dimen/normal_margin"
                    android:onClick="@{() -> viewModel.openInBrowser(repo.owner.htmlUrl)}"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/normal_font"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="@string/lbl_repo_name"
                    android:layout_marginTop="@dimen/normal_margin"
                    android:visibility="@{TextUtils.isEmpty(repo.fullName) ? View.GONE : View.VISIBLE}"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_font"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/small_margin"
                    android:padding="@dimen/small_margin"
                    android:visibility="@{TextUtils.isEmpty(repo.fullName) ? View.GONE : View.VISIBLE}"
                    android:text="@{repo.fullName}"
                    android:background="@drawable/bg_light_grey"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/normal_font"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="@string/lbl_repo_type"
                    android:layout_marginTop="@dimen/normal_margin"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_font"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/small_margin"
                    android:padding="@dimen/small_margin"
                    app:repoType="@{repo.private}"
                    android:background="@drawable/bg_light_grey"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/normal_font"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="@string/lbl_repo_description"
                    android:layout_marginTop="@dimen/normal_margin"
                    android:visibility="@{TextUtils.isEmpty(repo.description) ? View.GONE : View.VISIBLE}"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_font"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/small_margin"
                    android:padding="@dimen/small_margin"
                    android:visibility="@{TextUtils.isEmpty(repo.description) ? View.GONE : View.VISIBLE}"
                    android:text="@{repo.description ?? @string/null_repo_description}"
                    android:background="@drawable/bg_light_grey"/>
            </LinearLayout>

            <ProgressBar
                android:layout_width="@dimen/large_margin"
                android:layout_height="@dimen/large_margin"
                android:visibility="@{safeUnbox(viewModel.isLoading()) ? View.VISIBLE : View.GONE}"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@{viewModel.errorMessage}"
                android:visibility="@{viewModel.errorMessage == null ? View.GONE : View.VISIBLE}"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>